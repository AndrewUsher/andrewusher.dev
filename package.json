{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -i ./app/styles/tailwind.css -o ./app/tailwind.css --minify",
    "dev": "concurrently \"npm run dev:css\" \"node -r dotenv/config node_modules/.bin/remix dev\"",
    "dev:css": "tailwindcss -i ./app/styles/tailwind.css -o ./app/tailwind.css --watch",
    "postinstall": "remix setup node"
  },
  "dependencies": {
    "@remix-run/react": "1.1.1",
    "@remix-run/serve": "1.1.1",
    "@remix-run/vercel": "1.1.1",
    "contentful": "9.1.5",
    "dotenv": "10.0.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "remix": "1.1.1"
  },
  "devDependencies": {
    "@drewster/eslint-config": "3.1.1",
    "@remix-run/dev": "1.1.1",
    "@tailwindcss/typography": "0.5.0",
    "@types/react": "17.0.38",
    "@types/react-dom": "17.0.11",
    "babel-eslint": "10.1.0",
    "concurrently": "6.5.1",
    "eslint": "7.32.0",
    "tailwindcss": "3.0.10",
    "typescript": "4.5.4"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
