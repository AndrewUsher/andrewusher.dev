---
import { Image } from 'astro:assets'
import ThemeSwitcher from './ThemeSwitcher.tsx'
---

<footer
  class="bg-gray-50 text-gray-500 dark:bg-neutral-700 dark:text-slate-300"
  transition:persist
>
  <div class="mx-auto max-w-screen-xl px-4 py-16 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-3xl">
      <nav
        class="grid grid-cols-2 gap-4 text-center sm:grid-cols-3 lg:grid-cols-6"
      >
        <a href="/about" class="hover:opacity-75"> About Me </a>
        <a href="/blog" class="hover:opacity-75"> Blog </a>
        <a href="/contact" class="hover:opacity-75"> Get in touch </a>
        <a href="/contact" class="hover:opacity-75"> Office Hours </a>
        <a href="/projects" class="hover:opacity-75"> Projects </a>
        <a href="/uses" class="hover:opacity-75"> Uses </a>
      </nav>

      <div class="mt-8 flex justify-center space-x-6">
        <a
          href="https://twitter.com/AndrewUsher17"
          target="_blank"
          rel="noreferrer"
          aria-label="Twitter"
          class="hover:opacity-75"
        >
          <svg
            fill="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
            class="h-6 w-6"
          >
            <path
              d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"
            ></path>
          </svg>
        </a>

        <a
          href="https://github.com/AndrewUsher"
          target="_blank"
          rel="noreferrer"
          aria-label="GitHub"
          class="hover:opacity-75"
        >
          <svg
            fill="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
            class="h-6 w-6"
          >
            <path
              fill="evenodd"
              d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
              clip="evenodd"></path>
          </svg>
        </a>

        <a
          href="/rss.xml"
          aria-label="RSS Feed"
          class="hover:opacity-75"
        >
          <svg
            fill="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
            class="h-6 w-6"
          >
            <path
              d="M5 3C3.89 3 3 3.9 3 5V19C3 20.1 3.89 21 5 21H19C20.1 21 21 20.1 21 19V5C21 3.9 20.1 3 19 3H5ZM7.5 15C8.33 15 9 15.67 9 16.5S8.33 18 7.5 18 6 17.33 6 16.5 6.67 15 7.5 15ZM6 10V12C7.1 12 8.18 12.39 9 13.21C9.82 14.03 10.21 15.1 10.21 16.21H12.21C12.21 13.07 9.64 10.5 6.5 10.5L6 10ZM6 6V8C10.97 8 15 12.03 15 17H17C17 10.93 12.07 6 6 6Z"
            ></path>
          </svg>
        </a>
      </div>
      <div class="mt-8 flex justify-center">
        <ThemeSwitcher client:load />
      </div>
      <div class="mt-8 flex justify-center space-x-6">
        <a
          href="https://www.buymeacoffee.com/andrewusher"
          target="_blank"
          rel="noreferrer"
        >
          <Image
            src="https://cdn.buymeacoffee.com/buttons/v2/default-yellow.png"
            loading="lazy"
            alt="Buy Me A Coffee"
            height="60"
            width="217"
          />
        </a>
      </div>
    </div>
  </div>
</footer>
